<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bag7" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_fitness_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_fitness_type"
            android:layout_alignRight="@+id/tv_fitness_type_name"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="6666人看过"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fitness_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_fitness_level"
            android:layout_toEndOf="@+id/tv_fitness_level"
            android:padding="5dp"
            android:text="20分钟"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_fitness_type"
            android:layout_alignBottom="@+id/tv_fitness_type"
            android:layout_toEndOf="@+id/tv_fitness_type"
            android:text="•"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_fitness_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_fitnesst_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="名称"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white" 
             />

        <TextView
            android:id="@+id/tv_fitness_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_fitness_num"
            android:layout_below="@+id/tv_fitness_num"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="★5"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</LinearLayout>