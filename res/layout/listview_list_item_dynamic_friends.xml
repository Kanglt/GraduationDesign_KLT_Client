<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <lyu.klt.graduationdesign.view.CircleImageView
            android:id="@+id/iv_dynamic_user_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/iv_dynamic_user_picture"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dynamic_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KangltTat" />

            <TextView
                android:id="@+id/tv_dynamic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-18 12:46"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/tv_dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/str_test_textview" />

    <ImageView
        android:id="@+id/iv_dynamic_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/bag7" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <!-- 转发 -->

            <TextView
                android:id="@+id/tv_dynamic_forwarding_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/forwarding"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/view_right_devider"
            android:gravity="center" >

            <!-- 评论 -->

            <TextView
                android:id="@+id/tv_dynamic_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/comments"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/view_right_devider"
            android:gravity="center" >

            <!-- 点赞 -->

            <TextView
                android:id="@+id/tv_dynamic_thumb_up_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/thumb_up_unpress"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/gray" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>